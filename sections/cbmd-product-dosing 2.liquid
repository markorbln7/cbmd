<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.css">
<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
<section class="dosingInstructions">
  <div class="content_box Highlights_container rbln-container">
    <h6 class="h6_red"> Made for you</h6>
    <h2 class="h2_white">Dosing </br> Instructions</h2>
    <div class="swiper-container dosing-container">
        <div class="swiper-wrapper">
        {% assign i = 1 %}
        {% for dosing in product.metafields.dosingTItle.dosingTItle %} 
        {%- assign dosingTitle = dosing -%}
        <div class="swiper-slide d-flex flex-column dosingInstructions_box box box-pt-40" data-mh="dosing-cards">
            <h2 class="h3_white"> {{- dosingTitle -}} </br>
                <span style=" font-weight: 400;">0{{- i -}}</span></h2>
            <div class="h5_white">
            <p>{{ product.metafields.dosingText.dosingText[forloop.index0] }}</p>
            </div>
        </div>
        {% assign i = i | plus:1 %}
        {%- endfor -%} 

        </div>
    </div>
  </div>
  <div class="swiper-pagination dosing-pagination col-col-pagination col-pagination-bullet"></div>
</section>
<script>
    var swiperDosing = new Swiper('.dosing-container', {
      slidesPerView: 1,
      spaceBetween: 30,
      pagination: {
        el: '.dosing-pagination',
        clickable: true,
      },
      breakpoints: {
        501: {
          slidesPerView: 2,
        },
        793: {
          slidesPerView: 3,
        },
        1110: {
          slidesPerView: 3,
        },
      }
      
    });
</script>