<section class="reviews">
    <div class="bn-container">
        <div class="reviews__intro">
            <h4 class="bn-subtitle">{{ section.settings.subtitle }}</h4>
            <h2 class="bn-title">{{ section.settings.title }}</h2>
        </div>
        <ul class="reviews__list">
            {% for block in section.blocks %}
                <li class="reviews__list-item">
                    <div class="reviews__list-content">
                        <p>{{ block.settings.review }}</p>
                    </div>
                    <div class="reviews__user">
                        <img class="reviews__user-photo" src="{{ block.settings.image | img_url: "master"}}" alt="{{ block.settings.name }}">
                        <div class="reviews__user-info">
                            <strong class="reviews__user-name">{{ block.settings.name }}</strong>
                            <p>{{ block.settings.info }}</p>
                        </div>
                    </div>
                </li>
            {% endfor %}
            

        </ul>
    </div>
</section>

{% schema %}
{
    "name": "Reviews",
    "settings": [
        {
            "type": "text",
            "id": "subtitle",
            "label": "Subtitle",
            "default": "Hear from our doctors"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "What itâ€™s like to partner with CBMD"
        }
    ],
    "blocks": [
        {
            "type": "review",
            "name": "Reviews",
            "settings": [
                {
                    "type": "richtext",
                    "id": "review",
                    "label": "Review"
                },
                {
                   "type": "image_picker",
                   "id": "image",
                   "label": "Team Member Image" 
                },
                {
                    "type": "text",
                    "id": "name",
                    "label": "User name"
                },
                {
                    "type": "text",
                    "id": "info",
                    "label": "Info"
                }
            ]
        }
    ]
}
{% endschema %}