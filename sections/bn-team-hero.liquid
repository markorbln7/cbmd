<section class="team-hero" data-scroll data-scroll-speed="-1.5">
    <div class="team-hero__bg">
        <picture>
          <source media="(min-width:1240px)" srcset="https://cdn.shopify.com/s/files/1/0321/8472/9739/files/cbmd-practitioner-lander.png?v=1628578358">
          <source media="(min-width:732px)" srcset="https://cdn.shopify.com/s/files/1/0321/8472/9739/files/cbmd-practitioner-lander.png?v=1628578358">
          <img src="https://cdn.shopify.com/s/files/1/0321/8472/9739/files/cbmd-practitioner-lander.png?v=1628578358">
        </picture>
    </div>
    <div class="team-hero__container">
        <div class="team-hero__content" data-scroll data-scroll-direction="vertical" data-scroll-speed="-2" data-scroll-class="appear" data-scroll-repeat="true">
            <h1 class="team-hero__title">{{ section.settings.title }}</h1>
            <div class="team-hero__text">
                <p>{{ section.settings.copy }}</p>
            </div>
            {% if section.settings.btn_link %}
                <button data-action="open-modal" aria-controls="modal-general-newsletter" class="Button Button--cbd Button--red">{{ section.settings.btn_text }}</a>
            {% endif %}
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Team Hero",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "We are physicians."
        },
        {
            "type": "text",
            "id": "copy",
            "label": "Copy",
            "default": "What began as a response to our patientsâ€™ frequent requests for information on CBD, evolved into a broader response to address the inadequcies of the industry at large and serve our colleagues with an option in CBD that they can trust and verify."
        },
        {
            "type": "text",
            "id": "btn_text",
            "label": "Button Text",
            "default": "Connect with us"
        },
        {
            "type": "url",
            "id": "btn_link",
            "label": "Button Link"
        }
    ]
}
{% endschema %}