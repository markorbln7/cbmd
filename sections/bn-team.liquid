<section class="team">
    <div class="bn-container">
        <div class="team__intro">
            <h4 class="bn-subtitle">{{ section.settings.subtitle }}</h4>
            <h2 class="bn-title">{{ section.settings.title }}</h2>
            <div>
                {{ section.settings.copy }}
            </div>
        </div>


        <div class="team__grid">
            {% for block in section.blocks %}
                <div class="team__grid-item">
                    <img class="team__member-img" src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.name }}">
                    <div class="team__member">
                        <strong>{{ block.settings.name }}</strong>
                        <div>
                            {{ block.settings.info }}
                        </div>
                        <div class="team__additional-info">
                            {{ block.settings.additional-info }}
                        </div>
                        <img class="team__toggle-info" src="{{ 'plus.svg' | asset_url }}" alt="Info toggler">
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

<script>
    if (window.innerWidth < 733) {
        initSlider();
    }

    $( window ).resize(function() {
        if (window.innerWidth < 733) {
            initSlider();
        } else {
            killSlider();
        }
    });

    function toggleInfo() {
        this.parentElement.classList.toggle('team__member--open');
        this.classList.toggle('team__toggle-info--open');
    }

    $('.team__toggle-info').on('click', toggleInfo);

    function initSlider() {
        $('.team__grid').slick({
            autoplay: true,
            arrows: false,
            dots: true,
            infinite: true
        });
    }

    function killSlider() {
        $('.team__grid').slick('unslick');
    }
</script>


{% schema %}
{
    "name": "Team",
    "settings": [
        {
            "type": "text",
            "id": "subtitle",
            "label": "Subtitle",
            "default": "CBMD Medical Team"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Leaders in the field of medicine."
        },
        {
            "type": "richtext",
            "id": "copy",
            "label": "Content",
            "default": "<p>Our founding advisory board is comprised of expertâ€”practicing physicians, specialists in pharmacology researchers, and educators. </p>"
        }
    ],
    "blocks": [
        {
            "type": "member",
            "name": "Team Member",
            "settings": [
                {
                   "type": "image_picker",
                   "id": "image",
                   "label": "Team Member Image" 
                },
                {
                    "type": "text",
                    "id": "name",
                    "label": "Name"
                },
                {
                    "type": "richtext",
                    "id": "info",
                    "label": "Info"
                },
                {
                    "type": "richtext",
                    "id": "additional-info",
                    "label": "Additional Info"
                }
            ]
        }
    ]
}
{% endschema %}